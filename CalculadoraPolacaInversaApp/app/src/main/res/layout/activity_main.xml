<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:id="@+id/edtNumero1"
            android:layout_width="308dp"
            android:layout_height="52dp"
            android:ems="10"
            android:hint="Escriba un numero"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.122" />

        <EditText
            android:id="@+id/edtSimbolo"
            android:layout_width="314dp"
            android:layout_height="51dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="Escriba un simbolo/*-+"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/edtNumero1"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="@+id/edtNumero1"
            app:layout_constraintTop_toBottomOf="@+id/edtNumero1" />

        <EditText
            android:id="@+id/edtNumero2"
            android:layout_width="299dp"
            android:layout_height="55dp"
            android:layout_marginTop="52dp"
            android:ems="10"
            android:hint="Escriba un numero"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/edtSimbolo"
            app:layout_constraintStart_toStartOf="@+id/edtSimbolo"
            app:layout_constraintTop_toBottomOf="@+id/edtSimbolo" />

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="281dp"
            android:layout_height="53dp"
            android:layout_marginTop="60dp"
            android:onClick="Sw"
            android:text="Calcular"
            app:layout_constraintEnd_toEndOf="@+id/edtNumero2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edtNumero2"
            app:layout_constraintTop_toBottomOf="@+id/edtNumero2" />

        <TextView
            android:id="@+id/txvRespuesta"
            android:layout_width="286dp"
            android:layout_height="43dp"
            android:layout_marginTop="148dp"
            app:layout_constraintEnd_toEndOf="@+id/edtNumero2"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="@+id/edtNumero2"
            app:layout_constraintTop_toBottomOf="@+id/edtNumero2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>